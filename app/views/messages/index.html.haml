.flash-box
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name<
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to new_group_path do
              = fa_icon 'edit', class: "icon"
          %li.side-header__box__menu__edit-user
            =link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: "icon"
    .groups
      = render "groups/group"
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          test_1
        %ul.main-header__left-box__member-list
          Memberï¼š
          %li.main-header__left-box__member-list__member<
            test_s
      =link_to "/groups/1/edit" do
        .main-header__edit-btn<
          Edit
    .messages
      = render partial: 'message', collection: @messages
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :text, class: 'input-box__text', id: 'input-box__text', placeholder: 'type a message'
        .input-box
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'image'
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'